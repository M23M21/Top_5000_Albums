<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Reviews</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Reviews</h1>

  <button onclick="window.location.href='/'" class="home-button">Home</button>

  <div class="review-list">
    <% reviews.forEach(review => { %>
      <div class="review-item">
        <p class="review-user"><strong>User:</strong> <%= review.user %></p>
        <p class="review-text"><strong>Review:</strong> <%= review.review %></p>
        <form class="delete-form" action="/reviews/<%= review._id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
      </div>
    <% }); %>
  </div>

  <script>
    const deleteForms = document.querySelectorAll('.delete-form');
    deleteForms.forEach(form => {
      form.addEventListener('submit', event => {
        const confirmation = confirm('Are you sure you want to delete this review?');
        if (!confirmation) {
          event.preventDefault();
        }
      });
    });
  </script>
</body>
</html>
